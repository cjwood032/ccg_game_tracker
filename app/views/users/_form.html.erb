<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form__input" %>
    <%= f.label :Username %>
    <%= f.text_field :Username, class: "form__input" %>
    <%= f.label :password %>
    <%= f.password_field :password, class: "form__input" %>
  </div>
  <div class = "row">
    <div class="form-group__check-boxes">
      <%= f.collection_check_boxes(:ccg_ids, Ccg.all, :id, :name) do |c| %>
        <%= c.label(class: "col-1-of-3 ccg_label ccg_label__checkbox") do %>
          <%= c.check_box(class: "check_box") %>
          <%= c.object.name %>
        
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="actions">
      <%= f.submit class: "btn btn__dark btn__lg" %>
    </div>
<% end %>