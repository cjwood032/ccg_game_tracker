<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>

<div class="center">

  <div class="info">
    <p><strong>Username:</strong> <%= @user.Username %></p>
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>CCGs you play:<br></br></strong> <% @user.ccg_ids.each do |g| %>
      <%=Ccg.find(g).name%>
    <%end%>
    </p>
    <%= link_to 'Edit User', [:edit, @user] %> 
    <p><%= link_to 'View/Edit your decks', decks_path %></p>
    <p><%= link_to 'Play some Games!', games_path %></p>
  </div>
</div>