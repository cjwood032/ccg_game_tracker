<%= form_for(@deck) do |d| %>

    <div class="form-group">
      <%= d.label :name %><br>
      <%= d.text_field :name, class: "form-control" %><br><br></div>
  
    <div class="form-group">
        <%= d.label :ccg, "Card Game" %>
        <div class="field"><%= d.label :ccg, "Select the CCG" %><br>
            <%= d.collection_select(:ccg_id, Ccg.all, :id, :name) %><br><br>
    </div>
      
    <div class="form-group">
      <%= d.label :link, "Optional Link to the deck" %><br>
        <%= d.text_field :link, class: "form-control" %></div>
    </div>
  
    
    <div class="actions">
      <%= d.submit class: "btn btn-primary" %>
    </div>
    
  <% end %>