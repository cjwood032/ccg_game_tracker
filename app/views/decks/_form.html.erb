<%= form_for(@deck) do |d| %>  
  <%= d.text_field :name, class: "form__input", placeholder: "Name" %>
  <%= d.label :name, class: "form__label" %>  
  <%= d.label :ccg, "Format", class:"col-1-of-2 form__label form__label__static"  %>
  <%= d.collection_select(:ccg_id, current_user.ccgs, :id, :name) %>
  <%= d.label :ccg, "Colors", class:"form__label form__label__static"  %>    
  <%= d.select(:color, Deck.colors.keys.map {|color| [color,color]}) %>
  <%= d.text_field :link, class: "form__input", placeholder: "Optional link to the deck" %>
  <%= d.label :link, "Link:", class: "form__label" %>
  <%= d.submit class: "btn btn__white btn__center" %>
<% end %>