<strong>Play a game! </strong> 
<p><%= link_to 'View Games', games_path %></p>
<p id="notice"><%= notice %></p>
<%= form_for @game do |g| %>

    <div class="form-group">


    
        Deck:
        <div class="form-check form-check-inline">
            <%= g.collection_select(:deck_id, @decks, :id, :name) %>
        </div>
    
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Result</label>
        <div class="form-check form-check-inline">
            <%= g.radio_button(:result, "Win") %>
            <%= label_tag(:result_win, "Win") %>
            <%= g.radio_button(:result, "Loss") %>
            <%= label_tag(:result_loss, "Loss") %>
        </div>
    <h4>optional:</h4>
    <div class="form-group">
      <%= g.label :Comments %>
      <br>
      <%= g.text_area :comment, class: "form-control" %>
    </div><br>

    <div class="form-check form-check-inline">
        <b><%= g.label :opponent_deck, "Opponent's deck" %></b><br>
            <%= g.text_field :opponent_deck, class: "form-control"%></div>
    
    </div>
            


    <label><h4><center>Tags</center></h4></label><br>
    <% Tag.all.each do |tag| %>
      <div class="form-check form-check-inline">
      <label><%= tag.name %></label>
      <input class="form-check-input" type="checkbox" id="tag_<%=tag.id%>" name="<%= tag.name %>" value="true"%>
    	</div>
    <%end%>
    
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
        <%= tag(:input, :type => "hidden", :name => :user_id, :value => current_user.id) %>
    <input class: "btn btn-primary" type="submit" value="Record Game" >
    
  <%end%>
  </div>
</form>
 


