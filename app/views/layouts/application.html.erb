<!DOCTYPE html>
<html>
  <head>
    <title>CCG Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="info">
        
        <n id="notice"><i><%= notice %></i><br></n>
        <% if !logged_in? %>
          <a class="navbar-brand" href="<%=new_user_path%>">Sign Up</a>
          <a class="navbar-brand" href="<%= signin_path %>">Log In</a>
        <% else %>
          <%=current_user.Username%> logged in
          <a class="navbar-brand" href="<%= user_path(current_user) %>"/>Home</a>
          <a class="navbar-brand" data-method="delete" href="<%= signout_path %>">Log Out</a>
        <%end%>
      
        
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="info"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
